{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Steel",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#strings" },
		{ "include": "#char" },
		{ "include": "#numbers" },
		{ "include": "#keywords" },
		{ "include": "#types" },
		{ "include": "#operators" },
		{ "include": "#punctuation" },
		{ "include": "#function-declaration" },
		{ "include": "#function-call" },
		{ "include": "#method-call" },
		{ "include": "#module-import" },
		{ "include": "#type-declaration" }
	],
	"repository": {
	"comments": {
		"patterns": [
		{
			"name": "comment.line.double-slash.steel",
			"begin": "//",
			"beginCaptures": { "0": { "name": "punctuation.definition.comment.steel" } },
			"end": "$"
		},
		{
			"name": "comment.block.steel",
			"begin": "/\\*",
			"beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.steel" } },
			"end": "\\*/",
			"endCaptures": { "0": { "name": "punctuation.definition.comment.end.steel" } },
			"patterns": [
			{ "include": "#comments" }
			]
		}
		]
	},
	"strings": {
		"patterns": [
		{
			"name": "string.quoted.double.steel",
			"begin": "\"",
			"beginCaptures": { "0": { "name": "punctuation.definition.string.begin.steel" } },
			"end": "\"",
			"endCaptures": { "0": { "name": "punctuation.definition.string.end.steel" } },
			"patterns": [
			{ "name": "constant.character.escape.steel", "match": "\\\\." }
			]
		}
		]
	},
	"char": {
		"patterns": [
		{
			"name": "string.quoted.single.steel",
			"match": "'(\\\\.|[^\\\\'])'"
		}
		]
	},
	"numbers": {
		"patterns": [
		{
			"name": "constant.numeric.float.steel",
			"match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
		},
		{
			"name": "constant.numeric.integer.steel",
			"match": "\\b\\d+\\b"
		}
		]
	},
	"keywords": {
		"patterns": [
		{
			"name": "keyword.control.steel",
			"match": "\\b(?:if|else|while|for|return|break|module|import)\\b"
		},
		{
			"name": "keyword.declaration.steel",
			"match": "\\b(?:func|constructor|override|let|const|type|static|export)\\b"
		},
		{
			"name": "constant.language.steel",
			"match": "\\b(?:true|false|null|this|base)\\b"
		},
		{
			"name": "keyword.operator.word.steel",
			"match": "\\b(?:and|or|as)\\b"
		}
		]
	},
	"types": {
		"patterns": [
		{
			"name": "storage.type.primitive.steel",
			"match": "\\b(?:short|int|long|float|double|char|string|byte|bool|void)\\b"
		},
		{
			"name": "storage.type.decl.steel",
			"match": "\\b(?:struct|class|interface|enum)\\b"
		}
		]
	},
	"operators": {
		"patterns": [
		{
			"name": "keyword.operator.steel",
			"match": "\\+\\+|--|==|!=|<=|>=|->|<|>|%|\\+|-|\\*|/|=|!|\\."
		}
		]
	},
	"punctuation": {
		"patterns": [
		{
			"name": "punctuation.terminator.steel",
			"match": "[;:,]"
		},
		{
			"name": "punctuation.bracket.steel",
			"match": "[\\(\\)\\{\\}\\[\\]]"
		},
		{
			"name": "punctuation.other.steel",
			"match": "[\\^&#\\$]"
		}
		]
	},
	"function-declaration": {
		"patterns": [
			{
			"name": "meta.function.declaration.steel",
			"match": "^\\s*(?:func|override)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
			"captures": {
				"1": { "name": "entity.name.function.steel" }
			}
			},
			{
			"name": "meta.constructor.declaration.steel",
			"match": "^\\s*(?:constructor)\\s*(?=\\()",
			"captures": {}
			}
		]
		},
	"function-call": {
	"patterns": [
		{
		"name": "meta.function-call.steel",
		"match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
		"captures": {
			"1": { "name": "entity.name.function.call.steel" }
		}
		}
	]
	},
	"method-call": {
	"patterns": [
		{
		"name": "meta.method-call.steel",
		"match": "\\.\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
		"captures": {
			"1": { "name": "entity.name.function.call.steel" }
		}
		}
	]
	},
	"module-import": {
		"patterns": [
		{
			"name": "meta.module.declaration.steel",
			"begin": "^\\s*module\\s+",
			"beginCaptures": { "0": { "name": "keyword.declaration.module.steel" } },
			"end": "$",
			"patterns": [
			{
				"name": "entity.name.module.steel",
				"match": "\\b[A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)*\\b"
			}
			]
		},
		{
			"name": "meta.import.declaration.steel",
			"begin": "^\\s*import\\s+",
			"beginCaptures": { "0": { "name": "keyword.declaration.import.steel" } },
			"end": ";|$",
			"patterns": [
			{
				"name": "string.unquoted.module-path.steel",
				"match": "\\b[A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)*\\b"
			}
			]
		}
		]
	},
	"type-declaration": {
		"patterns": [
		{
			"name": "meta.type.declaration.steel",
			"begin": "^\\s*(struct|class|interface)\\s+([A-Za-z_][A-Za-z0-9_]*)",
			"beginCaptures": {
			"1": { "name": "storage.type.decl.steel" },
			"2": { "name": "entity.name.type.steel" }
			},
			"end": "\\{",
			"patterns": [
			{ "include": "#comments" },
			{ "include": "#types" }
			]
		},
		{
			"name": "meta.enum.declaration.steel",
			"begin": "^\\s*enum\\s+([A-Za-z_][A-Za-z0-9_]*)",
			"beginCaptures": {
			"1": { "name": "entity.name.type.steel" }
			},
			"end": "\\{",
			"patterns": []
		}
		]
	}
	},
	"scopeName": "source.steel"
}